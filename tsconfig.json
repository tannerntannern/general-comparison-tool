{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "jsxFactory": "createElement",
        "jsxFragmentFactory": "Fragment"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}